/**index.wxss**/

.background {
  height: 100vh;
  width: 100vw;
}

.userinfo {
  height: 30vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.avatar {
  width: 175rpx;
  height: 175rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.image {
  height: 30vh;
  width: 30vh;
}

.usermotto {
  height: 40vh;
  width: 100vw;
  display: flex;
  justify-content: center;
  margin-top: 10vh;
}

.box {
  height: 30vw;
  width: 100vw;
  display: flex;
  flex-direction: row;
  margin-left: 5vw;
}

.item {
  height: 30vw;
  width: 30vw;
  display: flex;
  align-items: center;
  justify-content: center;
}

.item1 {
  background-color: rgb(247, 205, 92);
}

.item2 {
  background-color: rgba(230, 245, 17, 0.863);
}

.item3 {
  background-color: rgba(169, 250, 49, 0.575);
}
