.background {
  height: 100vh;
  width: 100vw;
}

.userinfo {
  height: 30vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.avatar {
  width: 175rpx;
  height: 175rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.info {
  height: 40vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
}

.bar {
  height: 7vh;
  width: 100vw;
  display: flex;
  flex-direction: row;
  border-top: solid 1rpx #eee;
  border-bottom: solid 1rpx #eee;
}

.instruction {
  height: 7vh;
  width: 30vw;
  display: flex;
  margin-left: 5vw;
  align-items: center;
}

.input {
  height: 7vh;
  width: 70vw;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tip {
  height: 7vh;
  width: 90vw;
  font-size: 35rpx;
  margin-left: 5vw;
}

.save {
  height: 23vh;
  width: 100vw;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn {
  height: 9vh;
  width: 50vw;
  text-align: center;
  text-justify: center;
  background-color: lightgreen;
  color: white;
}
